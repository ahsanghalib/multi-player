{
  "name": "multi-players",
  "version": "0.0.8",
  "description": "To play all types of streams with minimal configs",
  "author": "ahsanghalib@gmail.com",
  "repository": "git@github.com:ahsanghalib/multi-player.git",
  "license": "MIT",
  "private": false,
  "keywords": [
    "shaka player",
    "dash js",
    "hls js",
    "media player"
  ],
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "main": "./dist/build/player.js",
  "types": "./dist/tsc/player.d.ts",
  "browser": "./dist/build/player.js",
  "scripts": {
    "clean": "rm -rf dist build package",
    "tsc": "tsc -p tsconfig.json",
    "build": "./scripts/build.js",
    "build:all": "yarn clean && yarn tsc && yarn build",
    "dev": "./scripts/dev.js",
    "watch": "./scripts/watch.js",
    "docs": "typedoc --entryPoints src/index.ts",
    "release": "yarn build:all && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "esbuild": "^0.16.4",
    "esbuild-node-externals": "^1.5.0",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "dashjs": "3.2.2",
    "hls.js": "1.2.8",
    "mux.js": "5.14.1",
    "shaka-player": "3.3.9"
  }
}
