{
  "name": "multi-players",
  "version": "0.0.3",
  "description": "Library play all types of streams with minimal configs",
  "author": "ahsanghalib@gmail.com",
  "repository": "git@github.com:ahsanghalib/multi-players.git",
  "license": "MIT",
  "private": false,
  "keywords": [
    "shaka player",
    "dash js",
    "hls js",
    "media player"
  ],
  "engines" : { 
    "npm" : ">=8.0.0",
    "node" : ">=16.0.0"
  },
  "main": "./dist/build/player.js",
  "types": "./dist/tsc/player.d.ts",
  "browser": "./dist/build/player.js",
  "scripts": {
    "clean": "rm -rf dist build package",
    "tsc": "tsc -p tsconfig.json",
