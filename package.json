    "build:dev": "./scripts/dev.js",
    "build:watch": "./scripts/watch.js",
    "docs": "typedoc --entryPoints src/index.ts"
  },

  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.2",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  }
